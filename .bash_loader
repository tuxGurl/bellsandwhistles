#!/bin/bash

# Load in all the bash scrips 

#Preferences 
export EDITOR=vim

# Aliases
if [ -f ~/bellsandwhistles/.bash_alias ]; then
    . ~/bellsandwhistles/.bash_alias
fi

# Project Specific
if [ -f ~/bellsandwhistles/.bash_prj ]; then
    . ~/bellsandwhistles/.bash_prj
fi

#Show SVN details in prompt
if [ -f ~/bellsandwhistles/.bash_svn ]; then
    . ~/bellsandwhistles/.bash_svn
fi

# Svn Tools
export PATH=~/bellsandwhistles/:$PATH

if [ -f ~/bellsandwhistles/.cygwin ]; then
    . ~/bellsandwhistles/.cygwin
fi


